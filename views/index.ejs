<%- include('header') -%>

<div class="box" id="heading">
    <!-- The day -->
    <h1> <%= listTitle %> </h1>
</div>

<div class="box">
    <!-- from item app.js -->
    <% for( let i = 0; i < items.length; i++ ) { %>
    <div class="item">
        <input type="checkbox">
        <p> <%= items[i] %> </p>
    </div>
    <% } %>

    <!-- Form -->
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>

</div>

<%- include('footer') -%>